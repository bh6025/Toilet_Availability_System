<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="5F_LEFT(0/3)"
                android:id="@+id/fifth_left"
                android:layout_weight="2"
                android:layout_gravity="center" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="5F_RIGHT(0/3)"
                android:id="@+id/fifth_right"
                android:layout_weight="2"
                android:layout_gravity="center" />
        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="4F_LEFT(0/3)"
            android:id="@+id/fourth_left"
            android:layout_weight="2" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="4F_RIGHT(0/3)"
            android:id="@+id/fourth_right"
            android:layout_weight="2" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="3F_LEFT(0/3)"
            android:id="@+id/third_left"
            android:layout_weight="2" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="3F_RIGHT(0/3)"
            android:id="@+id/third_right"
            android:layout_weight="2" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2" >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="2F_LEFT(0/3)"
            android:id="@+id/second_left"
            android:layout_weight="2" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="2F_RIGHT(0/3)"
            android:id="@+id/second_right"
            android:layout_weight="2" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2" >

        <Button

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="1F_LEFT(0/3)"
            android:id="@+id/first_left"
            android:layout_weight="2" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="1F_RIGHT(0/3)"
            android:id="@+id/first_right"
            android:layout_weight="2" />

    </LinearLayout>
</LinearLayout>
